<?xml version="1.0" encoding="UTF-8"?>

<openbox_config
	xmlns="http://openbox.org/3.4/rc"
	xmlns:xi="http://www.w3.org/2001/XInclude"
>

<resistance>
	<strength>0</strength>
	<screen_edge_strength>29</screen_edge_strength>
</resistance>

<focus>
	<focusNew>yes</focusNew>
	<followMouse>yes</followMouse>
	<focusLast>yes</focusLast>
	<underMouse>yes</underMouse>
	<focusDelay>0</focusDelay>
	<raiseOnFocus>no</raiseOnFocus>
</focus>

<placement>
	<policy>UnderMouse</policy>
	<center>yes</center>
</placement>

<applications>
	<application class="*">
		<decor>no</decor>
	</application>
</applications>

<theme>
	<name>minato</name>
	<titleLayout>CSLM</titleLayout>
	<keepBorder>yes</keepBorder>
	<animateIconify>yes</animateIconify>

	<font place="ActiveWindow">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
	<font place="InactiveWindow">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
	<font place="MenuHeader">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
	<font place="MenuItem">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
	<font place="ActiveOnScreenDisplay">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
	<font place="InactiveOnScreenDisplay">
		<name>cure</name>
		<size>8</size>
		<weight>normal</weight>
		<slant>normal</slant>
	</font>
</theme>

<desktops>
	<firstdesk>1</firstdesk>
	<number>3</number>
	<popupTime>0</popupTime>
	<names>
		<name>www</name>
		<name>irc</name>
		<name>src</name>
	</names>
</desktops>

<resize>
	<drawContents>yes</drawContents>
	<popupShow>Never</popupShow>
</resize>

<margins>
	<top>29</top>
	<bottom>0</bottom>
	<left>0</left>
	<right>0</right>
</margins>

<keyboard>
	<keybind key="W-Left">
		<action name="SendToDesktop"><to>left</to><wrap>yes</wrap></action>
	</keybind>
	<keybind key="W-Right">
		<action name="SendToDesktop"><to>right</to><wrap>yes</wrap></action>
	</keybind>

	<keybind key="W-1">
		<action name="SendToDesktop"><to>1</to></action>
	</keybind>
	<keybind key="W-2">
		<action name="SendToDesktop"><to>2</to></action>
	</keybind>
	<keybind key="W-3">
		<action name="SendToDesktop"><to>3</to></action>
	</keybind>

	<keybind key="W-q">
		<action name="Close"/>
	</keybind>

	<keybind key="W-e">
		<action name="ToggleMaximize"/>
	</keybind>
	<keybind key="W-t">
		<action name="ToggleAlwaysOnTop"/>
	</keybind>
	<keybind key="W-S-t">
		<action name="ToggleOmnipresent"/>
	</keybind>

	<keybind key="W-Tab">
		<action name="NextWindow"><dialog>none</dialog><bar>no</bar><raise>yes</raise></action>
	</keybind>
	<keybind key="W-S-Tab">
		<action name="PreviousWindow"><dialog>none</dialog><bar>no</bar><raise>yes</raise></action>
	</keybind>

	<keybind key="W-w">
		<action name="DirectionalTargetWindow"><direction>north</direction></action>
	</keybind>
	<keybind key="W-a">
		<action name="DirectionalTargetWindow"><direction>west</direction></action>
	</keybind>
	<keybind key="W-s">
		<action name="DirectionalTargetWindow"><direction>south</direction></action>
	</keybind>
	<keybind key="W-d">
		<action name="DirectionalTargetWindow"><direction>east</direction></action>
	</keybind>d

	<keybind key="W-S-w">
		<action name="MoveRelative"><y>-20</y></action>
	</keybind>
	<keybind key="W-S-a">
		<action name="MoveRelative"><x>-20</x></action>
	</keybind>
	<keybind key="W-S-s">
		<action name="MoveRelative"><y>20</y></action>
	</keybind>
	<keybind key="W-S-d">
		<action name="MoveRelative"><x>20</x></action>
	</keybind>d

	<keybind key="W-p">
		<action name="Execute"><command>scrot</command></action>
	</keybind>
	<keybind key="W-S-p">
		<action name="Execute"><command>punf -d</command></action>
	</keybind>
	<keybind key="W-o">
		<action name="Execute"><command>scrot -s</command></action>
	</keybind>
	<keybind key="W-S-o">
		<action name="Execute"><command>punf -s</command></action>
	</keybind>

	<keybind key="C-space">
		<action name="Execute"><command>mpc -q toggle</command></action>
	</keybind>
	<keybind key="C-Left">
		<action name="Execute"><command>mpc -q seek -10</command></action>
	</keybind>
	<keybind key="C-Right">
		<action name="Execute"><command>mpc -q seek +10</command></action>
	</keybind>
	<keybind key="C-Up">
		<action name="Execute"><command>mpc -q prev</command></action>
	</keybind>
	<keybind key="C-Down">
		<action name="Execute"><command>mpc -q next</command></action>
	</keybind>
	<keybind key="C-r">
		<action name="Execute"><command>mpdrandom</command></action>
	</keybind>

	<keybind key="W-Return">
		<action name="Execute"><command>urxvtc</command></action>
	</keybind>
</keyboard>

<mouse>
	<dragThreshold>1</dragThreshold>
	<doubleClickTime>500</doubleClickTime>
	<screenEdgeWarpTime>0</screenEdgeWarpTime>
	<screenEdgeWarpMouse>false</screenEdgeWarpMouse>

	<context name="Frame">
		<mousebind button="W-Left" action="Drag">
			<action name="Move"/>
		</mousebind>
		<mousebind button="W-Right" action="Drag">
			<action name="Resize"/>
		</mousebind>
		<mousebind button="W-Middle" action="Press">
			<action name="Lower"/>
			<action name="FocusToBottom"/>
			<action name="Unfocus"/>
		</mousebind>

		<mousebind button="W-Up" action="Press">
			<action name="GoToDesktop"><to>previous</to></action>
		</mousebind>
		<mousebind button="W-Down" action="Press">
			<action name="GoToDesktop"><to>next</to></action>
		</mousebind>

		<mousebind button="W-Right" action="Click">
			<action name="ShowMenu"><menu>root-menu</menu></action>
		</mousebind>
	</context>

	<context name="Titlebar">
		<mousebind button="Left" action="Drag">
			<action name="Move"/>
		</mousebind>
		<mousebind button="Left" action="DoubleClick">
			<action name="ToggleMaximize"/>
		</mousebind>
	</context>

	<context name="Titlebar">
		<mousebind button="Left" action="Press">
			<action name="Focus"/>
			<action name="Raise"/> Top Right Bottom Left TLCorner TRCorner BRCorner BLCorner"
		</mousebind>
		<mousebind button="Middle" action="Press">
			<action name="Lower"/>
			<action name="FocusToBottom"/>
			<action name="Unfocus"/>
		</mousebind>

		<mousebind button="Right" action="Press">
			<action name="ShowMenu"><menu>client-menu</menu></action>
		</mousebind>
	</context>

	<context name="Client">
		<mousebind button="Left" action="Press">
			<action name="Focus"/>
			<action name="Raise"/>
		</mousebind>
		<mousebind button="Middle" action="Press">
			<action name="Focus"/>
			<action name="Raise"/>
		</mousebind>
		<mousebind button="Right" action="Press">
			<action name="Focus"/>
			<action name="Raise"/>
		</mousebind>
	</context>

	<context name="Close">
		<mousebind button="Left" action="Press">
			<action name="Close"/>
		</mousebind>
	</context>

	<context name="Shade">
		<mousebind button="Left" action="Press">
			<action name="ToggleShade"/>
		</mousebind>
	</context>

	<context name="Maximize">
		<mousebind button="Left" action="Press">
			<action name="ToggleMaximize"/>
		</mousebind>
	</context>

	<context name="Root">
		<mousebind button="Up" action="Press">
			<action name="GoToDesktop"><to>previous</to></action>
		</mousebind>
		<mousebind button="Down" action="Press">
			<action name="GoToDesktop"><to>next</to></action>
		</mousebind>
		<mousebind button="W-Up" action="Press">
			<action name="GoToDesktop"><to>previous</to></action>
		</mousebind>
		<mousebind button="W-Down" action="Press">
			<action name="GoToDesktop"><to>next</to></action>
		</mousebind>

		<mousebind button="Right" action="Press">
			<action name="ShowMenu"><menu>root-menu</menu></action>
		</mousebind>
		<mousebind button="W-Right" action="Click">
			<action name="ShowMenu"><menu>root-menu</menu></action>
		</mousebind>
	</context>
</mouse>

<menu>
	<file>menu.xml</file>
	<hideDelay>200</hideDelay>
	<middle>no</middle>
	<submenuShowDelay>100</submenuShowDelay>
	<submenuHideDelay>400</submenuHideDelay>
	<showIcons>no</showIcons>
	<manageDesktops>no</manageDesktops>
</menu>

</openbox_config>
