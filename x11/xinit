# Set root image
rootshuf

# Load fonts
xset +fp $HOME/.fonts
xset +fp $HOME/.fonts/Microsoft
xset +fp /usr/share/fonts/X11/pcf/Gohufont/14
xset fp rehash

# Load .Xresources
xrdb $HOME/.Xresources

# Start URxvt daemon
urxvtd -q -o -f

# Add shadows
compton -b --backend xrender -cC -l -18 -t -18 -o 0.1

# Start lemonbars
fish $HOME/.lemonbar/launcher &

# Start wm
exec openbox
